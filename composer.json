{
  "name": "cornfield-io/core",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "stable",
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "Cornfield\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cornfield\\Core\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "dev": [
      "@require-check",
      "@fix-style",
      "@phpstan",
      "@psalm"
    ],
    "fix-style": [
      "php-cs-fixer fix src --using-cache no --rules=@Symfony,-no_superfluous_phpdoc_tags"
    ],
    "psalm": "psalm",
    "phpstan": "phpstan analyse -c phpstan.neon --ansi",
    "require-check": "composer-require-checker check ./composer.json"
  },
  "require": {
    "php": ">=7.4",
    "ext-hash": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-session": "*",
    "nyholm/psr7": "^1.2",
    "nyholm/psr7-server": "^0.4.1",
    "php-di/php-di": "^6.0",
    "psr/container": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-server-handler": "^1.0",
    "psr/http-server-middleware": "^1.0",
    "psr/simple-cache": "^1.0",
    "slim/slim": "4.*",
    "symfony/cache": "^5.0",
    "symfony/options-resolver": "^5.0",
    "twig/twig": "^3.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "maglnet/composer-require-checker": "^2.0",
    "phpstan/phpstan": "^0.11.19",
    "phpstan/phpstan-strict-rules": "^0.11.1",
    "roave/no-floaters": "^1.2",
    "roave/security-advisories": "dev-master",
    "vimeo/psalm": "^3.7.2"
  }
}
